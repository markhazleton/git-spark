{
  "name": "git-spark",
  "version": "1.0.183",
  "description": "Enterprise-grade Git repository analytics and reporting tool",
  "keywords": [
    "git",
    "analytics",
    "repository",
    "reporting",
    "metrics",
    "team",
    "collaboration",
    "code-quality",
    "enterprise"
  ],
  "author": "Mark Hazleton <mark@markhazleton.com>",
  "license": "MIT",
  "homepage": "https://markhazleton.github.io/git-spark/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MarkHazleton/git-spark.git"
  },
  "bugs": {
    "url": "https://github.com/MarkHazleton/git-spark/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "type": "commonjs",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "bin": {
    "git-spark": "bin/git-spark.js"
  },
  "files": [
    "dist/src/",
    "bin/",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "prebuild": "npm version patch --no-git-tag-version && node scripts/generate-version.js",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "npm run build && node bin/git-spark.js",
    "pretest": "node scripts/generate-version.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint -c eslint.config.cjs \"src/**/*.ts\"",
    "lint:fix": "eslint -c eslint.config.cjs \"src/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build && npm run test",
    "postpublish": "git push && git push --tags",
    "release:patch": "npm version patch && npm publish",
    "release:minor": "npm version minor && npm publish",
    "release:major": "npm version major && npm publish",
    "prepack": "npm run build",
    "pack:test": "npm pack && tar -tf git-spark-1.0.0.tgz | head -20",
    "docs": "typedoc src/index.ts",
    "prepare": "husky"
  },
  "dependencies": {
    "boxen": "^8.0.1",
    "chalk": "^5.6.2",
    "commander": "^14.0.1",
    "date-fns": "^4.1.0",
    "glob": "^11.0.3",
    "ora": "^9.0.0",
    "semver": "^7.7.3",
    "table": "^6.9.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.7.0",
    "@types/semver": "^7.7.1",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.4",
    "typedoc": "^0.28.13",
    "typescript": "^5.9.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testTimeout": 30000,
    "forceExit": true,
    "roots": [
      "<rootDir>/src",
      "<rootDir>/test"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/types/**/*",
      "!src/cli/**/*"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 60,
        "functions": 75,
        "lines": 70,
        "statements": 70
      }
    }
  }
}
